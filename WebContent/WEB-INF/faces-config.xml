<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
    
    <lifecycle>
    	<phase-listener>
    		log4j2.DebuggerListener
    	</phase-listener>
    </lifecycle>
    
    <application>
    	<locale-config>
    		<default-locale>en</default-locale>	<!-- Codigo de region -->
    	</locale-config>
    	<resource-bundle>
    		<base-name>datos_en</base-name>	<!-- Nombre del archivo properties sin extension -->
    		<var>datos</var>
    	</resource-bundle>
    	<message-bundle>jsf</message-bundle>	<!-- Asociar archivo properties jsf.properties -->
    </application>

</faces-config>
